<div class="jumbotron text-center">
  <br/>

  <p>This is a Private Chat Room. Messages can only be seen by you and {{model.sender}} </p>

  <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-5 col-md-offset-2">
      {{input type="email" value=emailAddress class="form-control" placeholder="Please enter your e-mail address." autofocus="autofocus"}}
    </div>

  <div class="form-horizontal form-group form-group-lg row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-5 col-md-offset-2">
      {{textarea class="form-control" placeholder="Enter your message here. At least 5 characters" rows="3" value=message}}
    </div>
    <div class="col-xs-10 col-xs-offset-1 col-sm-offset-0 col-sm-4 col-md-3">
        <button disabled={{isDisabled}} {{action 'savePrivateMessage'}} class="btn btn-primary btn-lg btn-block">Send Message</button>
    </div>
  </div>
  <table class="table table-bordered table-striped">
    <!-- <thead>
      <tr>
        <th>Sender</th>
        <th>Recipient</th>
        <th>Date-Time</th>
        <th>Message</th>
      </tr>
    </thead> -->
    <tbody>
    <!-- {{#each model}} -->
      <tr>
        <td>{{model.sender}}</td>
        <td>{{model.recipient}}</td>
        <td>{{model.sendingTime}}</td>
        <td>{{model.message}}</td>
      </tr>
    <!-- {{/each}} -->
    </tbody>
  </table>

  <span>{{model.sender}} | </span>
  <span>{{model.recipient}} | </span>
  <span>{{model.sendingTime}} | </span>
  <span>{{model.message}} | </span>
  <br/>
</div>
